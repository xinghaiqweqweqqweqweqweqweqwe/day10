/* 水平间距 */
page page .searchs {
  background-color: white;
  height: 800rpx;
}
._header {
  background-color: white;
  display: flex;
  padding-top: 10px;
}
._header .input {
  background-color: #f6f8fa;
  width: 90%;
  margin: auto;
  height: 60rpx;
  display: flex;
  align-items: center;
}
._header .input .icon {
  background-color: #f6f8fa;
  height: 20px;
  margin-left: 10px;
  width: 30px;
}
._header .input input {
  flex: 1;
}
._nav {
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.aa ._ul {
  padding: 0;
}
.aa ._ul ._li {
  display: flex;
  list-style: none;
  border-top: 1px solid darkgray;
  padding: 10px 30px;
  align-items: center;
}
.aa ._ul ._li button {
  width: 70px;
  font-size: 12px;
  margin-right: 10px;
  float: right;
  color: white;
  background-color: #1989fa;
}
._li {
  list-style: none;
}
.box ._ul {
  display: flex;
  justify-content: space-around;
}
.box .small {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.box .small .left ._img {
  width: 300rpx;
  height: 300rpx;
}
.box .small .right {
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}
.box .small .right ._span:nth-of-type(1) {
  color: black;
  margin-top: 10rpx;
  margin: 20rpx 0;
}
.box .small .right ._span:nth-of-type(2) {
  color: darkgray;
  font-size: 28rpx;
}
.box .small .right ._span:nth-of-type(3) {
  margin: 20rpx 0;
}
.box .small .right ._span:nth-of-type(3) ._span:nth-of-type(1) {
  color: red;
  margin-right: 10rpx;
}
.box .small .right ._span:nth-of-type(3) ._span:nth-of-type(2) {
  color: darkgray;
  font-size: 28rpx;
  text-decoration: line-through;
}
.box .small .right ._span:nth-of-type(4) {
  color: darkgray;
  font-size: 28rpx;
}
.box .small .zr {
  display: flex;
  align-items: flex-end;
}
.box .small .zr .icons {
  color: red;
}

